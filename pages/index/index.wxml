<!-- index.wxml -->
<view class="page">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key='img'>
      <swiper-item>
        <navigator url="{{item.link}}">
          <image src="{{item.photo}}" class="slide-image" width="100%" height="175" />
        </navigator>
      </swiper-item>
    </block>
  </swiper>


  <view class="zan-panel-title ">
    <view class="zan-font-16 zan-font-bold zan-c-black">热销商品
      <view class="zan-icon zan-icon-hot-sale zan-c-red"></view>
    </view>
    <view class="zan-font-10 zan-c-gray-dark">Reccom Pro</view>
  </view>
  <view class="zan-panel zan-panel-bottom zan-panel-top " style='padding:5rpx 0'>
    <view class="zan-row">

      <navigator class="pr" url="../product/detail?productId={{item.id}}" hover-class="changestyle" wx:for="{{hotlist}}" wx:key='hotlist'>
        <view class="zan-col zan-col-8">
          <image class="zanui-photo" src="{{item.photo_x}}"></image>
          <view class="zan-ellipsis--l2">
            <view class=" zan-font-14">{{item.name}}</view>
          </view>
          <view style="display:flex;line-height:50rpx;padding:10rpx 0;">
            <view class="gmxx" style="  color: red;">¥{{item.price_yh}}</view>
            <view class="gmx">¥{{item.price}}</view>
          </view>
        </view>
      </navigator>

    </view>
  </view>
  <view class="zan-panel zan-panel-bottom ">
    <image src='{{ad1.photo}}' style='width:100%; height:82rpx'></image>
  </view>


  <view class="cont">
    <navigator class="pr" url="../product/detail?productId={{item.id}}" hover-class="changestyle" wx:for="{{productData}}" wx:key='product'>
      <image class="photo" src="{{item.photo_x}}"></image>
      <view class="title">{{item.name}}</view>
      <view style="display:flex;line-height:50rpx;padding:10rpx 0;">
        <view class="gmxx" style="  color: red;">¥ {{item.price_yh}}</view>
        <view class="gmx">¥ {{item.price}}</view>
      </view>
      <view style="display:flex;line-height:50rpx;color:#999">
        <view class="gmxx" style="font-size:28rpx;width:30%">
          <text wx:if="item.is_show==1">新品</text>
          <text wx:elif="item.is_hot==1">热销</text>
          <text wx:else>推荐</text>
        </view>
        <view class="ku" style="width:60%">销量：{{item.shiyong}}</view>
      </view>
    </navigator>
  </view>
  <view class="clear mt10" bindtap="getMore">点击查看更多</view>
</view>